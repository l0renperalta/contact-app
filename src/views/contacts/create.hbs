<div class='container p-4'>
   <div class='row'>
      <div class='col-md-4'>
         <div class='card'>
            <div class='card-body'>
               <h3>Create</h3>
               <form action='/contacts/create' method='POST'>
                  <div class='form-group'>
                     <input
                        type='text'
                        name='contact'
                        placeholder='contact'
                        class='form-control mt-3 mb-3'
                        autofocus
                     />
                  </div>
                  <div class='form-group'>
                     <input
                        type='number'
                        name='number'
                        placeholder='number'
                        class='form-control mt-3 mb-3'
                     />
                  </div>
                  <div class='form-group'>
                     <input
                        type='text'
                        name='description'
                        placeholder='description'
                        class='form-control mt-3 mb-3'
                     />
                  </div>
                  <div class='form-group'>
                     <button class='btn btn-success btn-block'>Save</button>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>